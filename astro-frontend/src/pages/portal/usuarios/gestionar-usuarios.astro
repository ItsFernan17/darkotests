---
import Sistema from "../../../layouts/sistema.astro";
import { ViewUsuarios } from '../../../components/Usuarios/ViewUsuario';
---

<Sistema title="Gestionar Usuarios">
  <div class="mx-auto mt-1 h-auto w-full max-w-4xl px-4">
    <div class="mt-1 h-8"></div>
  </div>
  <h1 class="font-bold text-[35px] text-primary mr-32 ml-40 mb-3 mt-7 font-page text-left">
    Usuarios Registrados en el Sistema
  </h1>
  <p class=" text-[20px] text-primary mr-32 ml-40 mb-3 mt-7 font-page text-left">
    Para buscar algún usuario en específico, ingresa cualquiera de los datos registrados, Ej. DPI o Nombres.
  </p>
  <div class="max-h-[60vh] mr-32 ml-32 px-4 bg-background rounded-md">
    <ViewUsuarios client:load />
  </div>
</Sistema>
