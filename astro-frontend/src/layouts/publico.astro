---
import Navbar from "../components/Navbar";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Íconos adaptados a modo claro/oscuro -->
		<link rel="icon" type="image/png" href="/icono-dark.svg" media="(prefers-color-scheme: light)">
		<link rel="icon" type="image/png" href="/icono-light.svg" media="(prefers-color-scheme: dark)">

		<!-- Fuentes -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>

	<body class="bg-background w-full h-full absolute">
		<Navbar client:load />
		<div class="w-full">
			<slot />
		  </div>		  
	</body>

	
<footer class="bg-[#f9f8f9] text-[#2d2c36] py-10 px-6">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-start gap-12">
    
    <!-- Logo y Redes Sociales -->
    <div class="flex flex-col items-start gap-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" class="w-full h-full">
            <path d="M21 12A9 9 0 1 0 3 12" stroke="#5673E0" stroke-width="2.5" stroke-linecap="round" />
            <path d="M3 12A9 9 0 0 0 12 21" stroke="#FF6F61" stroke-width="2.5" stroke-linecap="round" />
            <path d="M9 12.5L11 14.5L15 10" stroke="#2D2C36" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold">DarkoTests</h1>
      </div>

      <!-- Redes Sociales -->
      <div class="flex gap-4 ml-5 pt-1">
        <!-- Facebook -->
        <a href="#" aria-label="Facebook" class="p-2 rounded-md hover:opacity-70 transition">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="black"><path d="M22.676 0H1.324C.593 0 0 .593 0 1.324v21.352C0 23.408.593 24 1.324 24h11.494v-9.294H9.689v-3.621h3.129V8.41c0-3.099 1.894-4.785 4.659-4.785 1.325 0 2.464.097 2.796.141v3.24h-1.921c-1.5 0-1.792.721-1.792 1.771v2.311h3.584l-.465 3.63H16.56V24h6.115c.733 0 1.325-.592 1.325-1.324V1.324C24 .593 23.408 0 22.676 0z"/></svg>
        </a>
        <!-- Instagram -->
        <a href="#" aria-label="Instagram" class="p-2 rounded-md hover:opacity-70 transition">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="black"><path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zM12 5.838a6.162 6.162 0 1 1 0 12.324 6.162 6.162 0 0 1 0-12.324zM19.846 5.595a1.44 1.44 0 1 1-2.88 0 1.44 1.44 0 0 1 2.88 0z"/></svg>
        </a>
        <!-- Twitter -->
        <a href="#" aria-label="Twitter" class="p-2 rounded-md hover:opacity-70 transition">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="black"><path d="M23.954 4.569c-.885.389-1.83.654-2.825.775 1.014-.611 1.794-1.574 2.163-2.723-.951.555-2.005.959-3.127 1.184-.896-.959-2.173-1.559-3.591-1.559-2.717 0-4.92 2.203-4.92 4.917 0 .39.045.765.127 1.124C7.691 8.094 4.066 6.13 1.64 3.161c-.427.722-.666 1.561-.666 2.475 0 1.71.87 3.213 2.188 4.096-.807-.026-1.566-.248-2.228-.616v.061c0 2.385 1.693 4.374 3.946 4.827-.413.111-.849.171-1.296.171-.314 0-.615-.03-.916-.086.631 1.953 2.445 3.377 4.604 3.417-1.68 1.319-3.809 2.105-6.102 2.105-.39 0-.779-.023-1.17-.067 2.189 1.394 4.768 2.209 7.557 2.209 9.054 0 13.999-7.496 13.999-13.986 0-.209 0-.42-.015-.63.961-.689 1.8-1.56 2.46-2.548z"/></svg>
        </a>
      </div>
    </div>

    <!-- Detalles y Sobre nosotros (alineados a la derecha en columnas) -->
    <div class="grid grid-cols-2 gap-12 text-left ml-auto">
      <!-- Detalles -->
      <div>
        <h4 class="font-semibold border-b mb-2">Detalles</h4>
        <ul class="space-y-1 text-sm">
          <li><a href="/terminos-condiciones">Términos y condiciones</a></li>
          <li><a href="#">Política de privacidad</a></li>
          <li><a href="#">Accesibilidad</a></li>
          <li><a href="#">Requisitos del sistema</a></li>
        </ul>
      </div>

      <!-- Sobre nosotros -->
      <div>
        <h4 class="font-semibold border-b mb-2">Sobre nosotros</h4>
        <ul class="space-y-1 text-sm">
          <li><a href="#">Nuestro equipo</a></li>
          <li><a href="#">Misión y visión</a></li>
          <li><a href="#">Contáctanos</a></li>
          <li><a href="#">Sostenibilidad</a></li>
        </ul>
      </div>
    </div>

  </div>
</footer>
</html>
