---
import NavbarSistema from '../components/NavbarSistema';
import AuthGuard from '../components/Auth/auth';

interface Props {
  title: string;
  bgColor?: string;
}

const { title, bgColor = "bg-background" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="DarkoTests - Plataforma de evaluación" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Íconos adaptados a modo claro/oscuro -->
    <link rel="icon" type="image/png" href="/icono-dark.svg" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/png" href="/icono-light.svg" media="(prefers-color-scheme: dark)" />

    <!-- Tipografía -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class={`w-full min-h-screen ${bgColor}`}>
    <AuthGuard client:load>
      <div>
        <NavbarSistema client:load />
        <slot />
      </div>
    </AuthGuard>
  </body>
</html>
